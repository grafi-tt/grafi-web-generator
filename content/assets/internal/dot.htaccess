RewriteEngine On

RewriteCond %{HTTP_ACCEPT} application/xhtml\+xml
RewriteCond %{LA-F:REQUEST_FILENAME} !\.
RewriteRule .* - "[T=application/xhtml+xml; charset=utf-8]"
RewriteCond %{HTTP_ACCEPT} !application/xhtml\+xml
RewriteCond %{LA-F:REQUEST_FILENAME} !\.
RewriteRule .* - "[T=text/html; charset=utf-8]"

ErrorDocument 404 /404.xhtml
